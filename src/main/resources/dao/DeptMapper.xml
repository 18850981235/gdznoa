<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.DeptMapper">
    <select id="getList" resultType="sysdept">
        SELECT * FROM `sys_dept`
        <trim prefix="where" prefixOverrides="and">
            <if test="id!=0">
                id=#{id}
            </if>
        </trim>
    </select>
    <select id="getListById" resultType="sysdept">
        SELECT * FROM `sys_dept` where
                id=#{id}
    </select>
    <insert id="add">
        INSERT INTO `sys_dept`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                `name`,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                #{name},
            </if>
        </trim>
    </insert>
    <update id="updateById">
        update `sys_dept`
        <set>
            <if test="name!=null">
                `name`=#{name},
            </if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteById">
        delete
        from `sys_dept`
        where id = #{id}
    </delete>
    <select id="getDeptUsers" resultMap="BaseResultMap">
        SELECT *  FROM `sys_dept`
    </select>
    <resultMap id="BaseResultMap" type="sysdept">
        <id column="id" property="id"/>
        <collection property="users" javaType="java.util.ArrayList" ofType="sysuser"
                    column="id" select="getUser">
        </collection>
    </resultMap>
    <select id="getUser" resultType="sysuser">
        SELECT `id`,`name`,`deptid`
        FROM `sys_user`
        WHERE `deptid` = #{id}
    </select>
</mapper>
