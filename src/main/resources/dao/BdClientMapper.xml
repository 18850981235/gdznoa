<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.BdClientMapper">


    <resultMap id="BaseResultMap" type="com.beans.BdClient">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="deptid" property="deptid" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="unit_type" property="unitType" jdbcType="VARCHAR"/>
        <result column="userid" property="userid" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="fax" property="fax" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="tfn" property="tfn" jdbcType="VARCHAR"/>
        <result column="bankaccount" property="bankaccount" jdbcType="VARCHAR"/>
        <result column="bankname" property="bankname" jdbcType="VARCHAR"/>
        <result column="bankaddress" property="bankaddress" jdbcType="VARCHAR"/>
        <association property="dept" javaType="com.beans.SysDept" column="deptid"
                     select="com.dao.DeptMapper.getListById">
        </association>
        <association property="user" javaType="com.beans.SysUser" column="userid"
                     select="com.dao.UserMapper.getByID">
        </association>
        <collection property="contacts" javaType="java.util.ArrayList" ofType="com.beans.BdClientContacts"
                    column="id" select="com.dao.BdClientContactsMapper.getContactsByClientid">
        </collection>
    </resultMap>

    <insert id="add" parameterType="com.beans.BdClient">
        insert into bd_client
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null">
                code,
            </if>
            <if test="name != null">
                `name`,
            </if>
            <if test="deptid != 0">
                deptid,
            </if>
            <if test="unitType != null">
                unit_type,
            </if>
            <if test="userid != 0">
                userid,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="fax != null">
                fax,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="tfn != null">
                tfn,
            </if>
            <if test="bankaccount != null">
                bankaccount,
            </if>
            <if test="bankname != null">
                bankname,
            </if>
            <if test="bankaddress != null">
                bankaddress,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null">
                #{code},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="deptid != 0">
                #{deptid},
            </if>
            <if test="unitType != null">
                #{unitType},
            </if>
            <if test="userid != 0">
                #{userid},
            </if>
            <if test="content != null">
                #{content},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
            <if test="fax != null">
                #{fax},
            </if>
            <if test="address != null">
                #{address},
            </if>
            <if test="tfn != null">
                #{tfn},
            </if>
            <if test="bankaccount != null">
                #{bankaccount},
            </if>
            <if test="bankname != null">
                #{bankname},
            </if>
            <if test="bankaddress != null">
                #{bankaddress},
            </if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.beans.BdClient">
        update bd_client
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="deptid != 0">
                deptid = #{deptid},
            </if>
            <if test="unitType != null">
                unit_type = #{unitType},
            </if>
            <if test="userid != 0">
                userid = #{userid},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="fax != null">
                fax = #{fax},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="tfn != null">
                tfn = #{tfn},
            </if>
            <if test="bankaccount != null">
                bankaccount = #{bankaccount},
            </if>
            <if test="bankname != null">
                bankname = #{bankname},
            </if>
            <if test="bankaddress != null">
                bankaddress = #{bankaddress},
            </if>
        </set>
        where id=#{id}
    </update>

    <select id="getCount" resultType="java.lang.Integer">
        select count(*) from bd_client
        <trim prefix="where" prefixOverrides="and">
            <if test="name != null">
                and `name` like CONCAT('%',#{name},'%')
            </if>
            <if test="unitType != null">
                and unit_type=#{unitType}
            </if>
            <if test="userid != 0">
                and  userid=#{userid}
            </if>
            <if test="address != null">
                and address=#{address}
            </if>
        </trim>
    </select>

    <select id="getClientList" resultMap="BaseResultMap">
        select * from bd_client
        <trim prefix="where" prefixOverrides="and">
            <if test="name != null">
                and `name` like CONCAT('%',#{name},'%')
            </if>
            <if test="unitType != null">
                and unit_type=#{unitType}
            </if>
            <if test="userid != 0">
               and userid=#{userid}
            </if>
            <if test="address != null">
                and address=#{address}
            </if>
        </trim>
        ORDER BY `id` DESC
        <if test="pageSize!=0">
            LIMIT #{pageIndex},#{pageSize}
        </if>
    </select>

    <delete id="deleteById">
        delete
        from bd_client
        where id = #{id}
    </delete>

    <select id="getClientById" resultMap="BaseResultMap">
          select * from  bd_client where id=#{id}
    </select>

    <select id="isName" resultType="int" >
        select  count(1) from bd_client where  `name`=#{name}
    </select>

    <select id="getAddress" resultType="String">
        select DISTINCT address  from bd_client
    </select>

    <select id="getClientName" resultType="com.beans.BdClient">
        select id,`name` from bd_client
    </select>
</mapper>
