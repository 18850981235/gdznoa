<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.system.systemMapper">
    <resultMap id="BaseResultMap" type="com.beans.system">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="f_id" property="f_id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>

    </resultMap>

    <insert id="addsystem">
        insert into system
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="fid != 0">
                f_id,
            </if>
            <if test="name != null">
                 `name`,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">

            <if test="fid != 0">
                #{fid},
            </if>
            <if test="name != 0">
                #{name},
            </if>

        </trim>
    </insert>


    <update id="updatesystrm">
        update system

        <set>
            <if test="fid != 0">
                f_id = #{fid},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>

        </set>
        where id=#{id}
    </update>
    <select id="querybyid" resultMap="BaseResultMap">
        select *
        from system
        where id = #{id}
    </select>
    <select id="querybyfid" resultMap="BaseResultMap">
        select *
        from system
        where f_id = #{fid}
    </select>
    <select id="queryfid" resultMap="BaseResultMap">
        select *
        from system
        where f_id =0
    </select>


    <select id="query" resultMap="BaseResultMap">
        select *
        from system

    </select>





</mapper>