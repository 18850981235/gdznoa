<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.MyWorkMapper">
    <resultMap id="BaseResultMap" type="com.beans.MyWork">
        <result column="createtime" property="createtime" jdbcType="TIMESTAMP"/>
        <result column="id" property="id" jdbcType="INTEGER"/>
        <association property="user" javaType="com.beans.SysUser" column="userid"
                     select="com.dao.UserMapper.getByID">
        </association>
        <association property="process" javaType="com.beans.SysApprovalProcess" column="processid"
                     select="com.dao.ApprovalProcessMapper.getProcessById">
        </association>
        <association property="processUser" javaType="com.beans.SysUser" column="process_userid"
                     select="com.dao.UserMapper.getByID">
        </association>
    </resultMap>
    <select id="getList" resultMap="BaseResultMap">
        DROP TABLE IF EXISTS tmp_table;
        CREATE TEMPORARY TABLE tmp_table  SELECT `id`,`userid`,`processid`,`process_userid`,`createtime` FROM `mc_stamp` where `process_state`='进行中' and process_userid=#{userid};
        INSERT INTO tmp_table  SELECT `id`,`principal` as userid,`processid`,`process_userid`,`createtime` FROM  `bd_project`where `process_state`='进行中'  and process_userid=#{userid};
        SELECT * FROM tmp_table;
    </select>
</mapper>
