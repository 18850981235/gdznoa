        select `mc_qualification_certificate`.*,`sys_dept`.name as  deptName
        from `mc_qualification_certificate`,`sys_dept`
        <trim prefix="where" prefixOverrides="and">
            `sys_dept`.`id` = `mc_qualification_certificate`.`deptid`
